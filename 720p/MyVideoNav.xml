			<include file="ViewsMovies.xml">MoviesListInfoView2</include> <!-- 66 -->
			<include file="ViewsMovies.xml">MoviesListInfoView3</include> <!-- 95 -->
			<include file="ViewsMovies.xml">MoviesThumbsInfoView</include> <!-- 97 -->
			<include condition="!Skin.HasSetting(UseTVShowsPosterCover)" file="ViewsTVShows.xml">TVShowsWideIconView</include> <!-- 56 -->
			<include file="ViewsTVShows.xml">TVShowsWideListView</include> <!-- 76 -->
			<include file="ViewsTVShows.xml">TVShowsListInfoView</include> <!-- 61 -->
			<include file="ViewsTVShows.xml">TVShowsListInfoView2</include> <!-- 65 -->
			<include condition="Skin.HasSetting(UseTVShowsPosterCover)" file="ViewsTVShows.xml">TVShowsThumbsInfoView</include> <!-- 100 -->
			<include file="ViewsEpisodes.xml">EpisodesWideListView</include> <!-- 74 -->
			<include file="ViewsEpisodes.xml">EpisodesListInfoView</include> <!-- 73 -->
			<include file="ViewsEpisodes.xml">EpisodesListInfoView2</include> <!-- 68 -->
			<include file="ViewsEpisodes.xml">EpisodesListInfoView3</include> <!-- 94 -->
			<include file="ViewsMovies.xml">MoviesWallView</include> <!-- 69 -->
			<include file="ViewsCommon.xml">AlbumThumbsView</include> <!-- 63 -->
			<include file="ViewsAddons.xml">AddonsWideListView</include> <!-- 90 -->
			<include file="ViewsAddons.xml">AddonsListInfoView</include> <!-- 91 -->
			<include file="ViewsAddons.xml">AddonsWrapListInfoView</include> <!-- 93 -->
		</control>
		
		<include condition="!Skin.HasSetting(EnableKioskMode)">MediaMenuBar</include>
		
		<control type="group">
			<description>Top Bar Area</description>
			<include>TopBarImage</include>
			<include>TopBarOpenCloseAnim</include>
			<include>BreadCrumbVideoLibrary</include>
			<include>Notifications</include>
