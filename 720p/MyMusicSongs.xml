<window id="501">
	<defaultcontrol always="true">500</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50,51,52,63,70,90,91,93</views>
	
	<controls>	
		<control type="group">	
			<include>BackgroundDefault</include>
			<include condition="[[!IsEmpty(Skin.String(CustomMusicBGPath)) + [Skin.String(CustomMusicBGType,) | Skin.String(CustomMusicBGType,2) | Skin.String(CustomMusicBGType,3)]] 
			| Skin.String(CustomMusicBGType,4)] + Skin.HasSetting(ApplyAllMusicCustomBG)">BackgroundMusic</include>
			<include condition="!Skin.HasSetting(DisableVideoPlayingBG)">BackgroundVideoPlaying</include>
			<include condition="!Skin.HasSetting(DisableMusicPlayingBG)">BackgroundMusicPlaying</include>
			<include>BackgroundOpenCloseAnim</include>
		</control>

		<control type="group">   
			<visible>!Window.IsActive(MusicInformation) + !Window.IsActive(MovieInformation)</visible>
			<include>MediaInfoOpenCloseAnim</include>
			<include>IconView</include> <!-- 50 -->
			<include>BigIconView</include> <!-- 51 -->
			<include>ListView</include> <!-- 52 -->
			<include>AlbumThumbsView</include> <!-- 63 -->
			<include>AddonsWideListView</include> <!-- 90 -->
			<include>AddonsListInfoView</include> <!-- 91 -->
			<include>AddonsWrapListInfoView</include> <!-- 93 -->
<!-- 70 MusicWallView-->
<control type="group" id="500">	
		    <defaultcontrol always="true">70</defaultcontrol>
			<visible>Control.IsVisible(70)</visible>
			<include>MediaViewOpenCloseAnim</include>
			
			<control type="panel" id="70">
				<viewtype label="31113">Wall</viewtype>
				<posx>-2</posx>
				<posy>45</posy>
				<width>1284</width>
				<height>675</height>
				<pagecontrol>909</pagecontrol>
				<scrolltime>100</scrolltime>
				<orientation>horizontal</orientation>
				<preloaditems>1</preloaditems>
				<onup>850</onup>
				<ondown>150</ondown>
				<visible>Container.Content(Albums)</visible>
				<itemlayout width="214" height="225">
					<control type="image">
						<description>Default Cover Case</description>
						<width>214</width>
						<height>225</height>
						<texture border="2">covers/cover-case-noshadow-nofocus.png</texture>
						<aspectratio>stretch</aspectratio>
						<visible>IsEmpty(ListItem.Thumb)</visible>
						<colordiffuse>B2FFFFFF</colordiffuse>
					</control>
					<control type="image">
						<description>Cover</description>
						<width>214</width>
						<height>225</height>
						<texture background="true">$INFO[ListItem.Thumb]</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<description>Default Cover</description>
						<width>214</width>
						<height>225</height>
						<bordersize>40</bordersize>
						<texture background="true">music/$INFO[ListItem.Icon]</texture>
						<visible>IsEmpty(ListItem.Thumb)</visible>
						<colordiffuse>B2FFFFFF</colordiffuse>
					</control>
					<control type="image">
						<description>Dim</description>
						<width>214</width>
						<height>225</height>
						<texture background="true">dim.png</texture>
						<aspectratio>stretch</aspectratio>
						<visible>!IsEmpty(ListItem.Thumb) + !Skin.HasSetting(DoNotDimMusicWallCover)</visible>
						<include>CoverDimAnim</include>
					</control>
				</itemlayout>					
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + Container.Column(0) + Container.Row(0)">
					<control type="image">
						<description>Top Left Corner Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewTopLeftCornerFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + !Container.Column(0) + !Container.Column(5) + Container.Row(0)">
					<control type="image">
						<description>Top Edge Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewTopEdgeFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + Container.Column(5) + Container.Row(0)">
					<control type="image">
						<description>Top Right Corner Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewTopRightCornerFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + Container.Column(0) + Container.Row(1)">
					<control type="image">
						<description>Left Edge Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewLeftEdgeFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + !Container.Row(0) + !Container.Row(2) + !Container.Column(0) + !Container.Column(5)">
					<control type="image">
						<description>Mid Row Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewMidRowFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + Container.Column(5) + Container.Row(1)">
					<control type="image">
						<description>Right Edge Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewRightEdgeFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + Container.Column(0) + Container.Row(2)">
					<control type="image">
						<description>Bottom Left Corner Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewBottomLeftCornerFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + ! Container.Column(0) + !Container.Column(5) + Container.Row(2)">
					<control type="image">
						<description>Bottom Edge Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewBottomEdgeFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="!IsEmpty(ListItem.Thumb) + Container.Column(5) + Container.Row(2)">
					<control type="image">
						<description>Bottom Right Corner Cover</description>
						<include>AlbumWallCoverImage</include>
						<include>MusicWallViewBottomRightCornerFocusAnim</include>
					</control>
				</focusedlayout>
				<focusedlayout width="214" height="225" condition="IsEmpty(ListItem.Thumb)">
					<control type="image">
						<description>Default Cover Case</description>
						<width>214</width>
						<height>225</height>
						<texture border="2">covers/cover-case-noshadow-focus.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<description>Default Cover</description>
						<width>214</width>
						<height>225</height>
						<bordersize>40</bordersize>
						<texture background="true">music/$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</focusedlayout>
			</control>
			
			<include>WallViewScrollbar</include>
			
			<control type="group">
				<posy>SortLetterOffsetY</posy>
				<include>SortLetterNotification</include>
			</control>
			
			<control type="button" id="188">
				<onfocus>Skin.SetString(CurrentViewMode,70)</onfocus>
				<include>ViewOptionsHelperBtn</include>
				<visible>Control.IsVisible(70)</visible>
			</control>

			<control type="group" id="659">
				<description>Bottom Bar Area</description>
				<posy>BottomPaneOffsetY</posy>
				<visible>Control.HasFocus(70) + System.IdleTime(2) + !Skin.HasSetting(HideMusicWallInfoPanel)</visible>
				<animation effect="slide" start="0,65" time="300">Visible</animation>
				<include>InfoPaneImage</include>
				<include>InfoPaneMediaDetails</include>
				<include>BottomPaneOpenCloseAnim</include>
				
				<control type="label">
					<include>InfoPaneItemTitle</include>
					<label>$INFO[ListItem.Label]</label>
				</control>
				
				<control type="label">
					<include>InfoPaneItemTitle2</include>
					<label>$INFO[ListItem.Artist]</label>
				</control>
			</control>	
			
			<include>ViewsDialogPopUpScreenDim</include>	
		</control>
		</control>
		
		<include condition="!Skin.HasSetting(EnableKioskMode)">MediaMenuBar</include>
		
		<control type="group">
			<description>Top Bar Area</description>
			<include>TopBarImage</include>
			<include>TopBarOpenCloseAnim</include>
			<include>BreadCrumbMusicFiles</include>
			<include>Notifications</include>
		</control>
	</controls>	
</window>
