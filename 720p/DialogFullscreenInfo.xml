				<control type="image">
					<description>Cover</description>
					<posx>55</posx>
					<posy>11</posy>
					<width>185</width>
					<height>104</height>
					<texture diffuse="covers/player-tv-cover-border.png">$INFO[VideoPlayer.Cover]</texture>
					<aspectratio>scale</aspectratio>
				</control>
				
				<control type="group">			
					<posx>260</posx>
					
					<control type="grouplist">
						<posy>5</posy>
						<width>781</width>
						<height>50</height>
						<itemgap>5</itemgap>
						<usecontrolcoords>true</usecontrolcoords>
						<orientation>horizontal</orientation>
						<control type="label">
							<description>Title/Year</description>
							<width min="50" max="671">auto</width>
							<height>50</height>
							<font>FSInfoTitleFont</font>
							<textcolor>MediaInfoTitleColor</textcolor>
							<label>[UPPERCASE]$INFO[VideoPlayer.Title] $INFO[VideoPlayer.Year,(,)][/UPPERCASE]</label>
							<scroll>yes</scroll>
						</control>
						<control type="image">
							<description>Star Rating</description>
							<posy>2</posy>
							<width>100</width>
							<height>32</height>		
							<texture>$INFO[Player.StarRating]</texture>
							<aspectratio align="left">keep</aspectratio>
							<animation effect="fade" end="70" condition="true">Conditional</animation>
						</control>
					</control>
					
					<control type="label">
						<description>Genre</description>
						<posy>35</posy>
						<width>781</width>
						<font>FSInfoFont</font>
						<textcolor>MediaInfoTitleColor2</textcolor>
						<label>[UPPERCASE]$INFO[VideoPlayer.Genre][/UPPERCASE]</label>
					</control>

					<control type="grouplist">
						<description>Media Flags Area</description>
						<posy>72</posy>
						<width>781</width>
						<height>41</height>
						<itemgap>5</itemgap>
						<align>left</align>
						<usecontrolcoords>true</usecontrolcoords>
						<orientation>horizontal</orientation>
						<include>MediaFlagFadeAnim</include>
						<include condition="!Skin.HasSetting(UseAltMediaFlagTheme)">PlayerVideoMediaFlags</include>
						<include condition="Skin.HasSetting(UseAltMediaFlagTheme)">PlayerVideoAltMediaFlags</include>
						<include condition="!Skin.HasSetting(UseAltMediaFlagTheme)">PlayerAudioMediaFlags</include>
						<include condition="Skin.HasSetting(UseAltMediaFlagTheme)">PlayerAudioAltMediaFlags</include>
						<include condition="!Skin.HasSetting(UseAltMediaFlagTheme)">PlayerRatingMediaFlags</include>
						<include condition="Skin.HasSetting(UseAltMediaFlagTheme)">PlayerRatingAltMediaFlags</include>
					</control>
				</control>

				<control type="grouplist">
					<description>Chapter</description>
					<posx>625</posx>
					<posy>89</posy>
					<width>600</width>
					<align>right</align>
					<orientation>horizontal</orientation>
					<visible>Player.ChapterCount</visible>
					<control type="label">
						<width min="10" max="600">auto</width>
						<font>FSInfoFont2</font>
						<textcolor>MediaInfoItemColor</textcolor>
						<label>$LOCALIZE[21396]:</label>
					</control>
					<control type="label">
						<width min="10" max="600">auto</width>
						<font>FSInfoFont2</font>
						<textcolor>MediaInfoItemColor2</textcolor>
						<label>$INFO[Player.Chapter] $INFO[Player.ChapterCount,/ ] $INFO[Player.ChapterName,- ,]</label>
						<scroll>yes</scroll>
					</control>
				</control>
			</control>
				
			<control type="group">		
				<visible>VideoPlayer.Content(Movies) + Window.IsActive(FullScreenVideo)</visible>

				<control type="image">
					<description>Cover</description>
					<posx>55</posx>
					<posy>11</posy>
					<width>76</width>
					<height>104</height>
